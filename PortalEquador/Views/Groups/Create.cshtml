@model PortalEquador.Models.GroupTypes.GroupsViewModel

@{
    ViewData["Title"] = "Create";
}
<br />
<h1>Criar Novo Grupo</h1>

<hr />
<br />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />

            <div class="mb-3">
                <label asp-for="Observation" class="control-label"></label>
                <textarea asp-for="Observation" class="form-control"  rows="3"></textarea>
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>

            <br />
            <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Back to List</a> &nbsp;
                <input type="submit" value="Gravar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


