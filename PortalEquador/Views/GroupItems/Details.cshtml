@model PortalEquador.Domain.GroupTypes.ViewModels.GroupItemViewModel

@{
    ViewData["Title"] = "Details";
}
<br />
<h1>Detalhes - @Model.Description</h1>

<div>
    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            Grupo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        @if (@Model.Observation != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Observation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Observation)
            </dd>
        }

        @if (@Model.DateModified != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateModified)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateModified)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        }

    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-dark" asp-route-id="@Model?.Id" asp-route-groupId="@ViewBag.groupId" asp-route-groupName="@ViewBag.groupName">Regressar ao index</a> &nbsp;
    <a asp-action="Edit" asp-route-id="@Model?.Id" asp-route-groupId="@ViewBag.groupId" asp-route-groupName="@ViewBag.groupName" class="btn btn-warning">Editar registo</a>
</div>
