@model PortalEquador.Domain.GroupTypes.ViewModels.GroupItemViewModel

@{
    ViewData["Title"] = "Create";
}
<br />
<h1>Criar Novo Item</h1>

<hr />
<br />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-route-groupName="@ViewBag.groupName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="GroupId" />
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />

            <div class="mb-3">
                <label asp-for="Observation" class="control-label"></label>
                <textarea asp-for="Observation" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span asp-validation-for="Error" class="text-danger"></span>
            </div>

            <br />
            <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark" asp-route-groupId="@ViewBag.groupId" asp-route-groupName="@ViewBag.groupName">Regressar ao index</a> &nbsp;
                <input type="submit" value="Criar registo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>