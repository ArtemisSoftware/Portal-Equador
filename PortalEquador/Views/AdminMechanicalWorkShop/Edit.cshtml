@model PortalEquador.Domain.MechanicalWorkshop.Admin.ViewModels.AdminMechanicalWorkshopViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar contratos associados</h1>
<h3>@Html.DisplayNameFor(model => model.user.UserName)</h3>

<hr />
<br />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="user.UserId" />
            <input type="hidden" asp-for="user.UserName" />
            <input type="hidden" asp-for="user.Role" />
            <input type="hidden" asp-for="DateCreated" />

            <dl class="row">
                <dt class="col-sm-8">
                    @Html.DisplayNameFor(model => model.user.Role)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.user.Role)
                </dd>
             </dl>

            <h6>Contratos</h6>
            <hr />

            @for (int index = 0; index < Model.AllContracts.Count; index++)
            {
                <div class="form-check">
                    <input asp-for="@Model.SelectedContracts[index]" class="form-check-input" type="checkbox" id="@Model.AllContracts[index].Id" />
                    <label asp-for="@Model.SelectedContracts[index]" class="form-check-label">
                        @Html.DisplayFor(modelItem => @Model.AllContracts[index].Description)
                    </label>
                </div>
            }

            @if (Model.Error != null)
            {
                <br />
                <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                        <span asp-validation-for="Error" class="text-danger"></span>
                    </div>
                </div>
            }

        <br />
        <br />
        <div class="form-group">
            <a asp-action="Index" class="btn btn-dark">Regressar ao index</a> &nbsp;
            <input type="submit" value="Guardar Alterações" class="btn btn-warning" />
        </div>


        </form>

    </div>
</div>