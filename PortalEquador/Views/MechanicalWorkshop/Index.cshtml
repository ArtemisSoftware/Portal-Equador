@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Oficina</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Agendamentos</h3>
                    <p class="card-text">Gestão de agendamentos</p>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a asp-controller="MechanicalWorkshop" asp-action="Index" class="btn btn-primary">Gerir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Viaturas</h3>
                    <p class="card-text">Gestão de viaturas e contratos associados</p>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a asp-controller="MechanicalWorkshopVehicle" asp-action="Index" class="btn btn-primary">Gerir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />


</div>

