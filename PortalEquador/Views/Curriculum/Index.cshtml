@model IEnumerable<PortalEquador.Domain.PersonalInformation.ViewModels.PersonalInformationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="PersonalInformation" asp-action="Create"  class="btn btn-success"><i class="fas fa-plus"></i> Criar Novo Registo</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
               @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                    <a asp-action="Dashboard" asp-route-identifier="@item.Id" class="btn btn-info"><i class="fas fa-th"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
        $(function () {

            $('.table').DataTable();

            $('.deleteBtn').click(function (e) {
                swal({
                    title: "Remover Grupo",
                    text: "Tem a certeza que pretende eliminar o registo?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#groupId').val(id);
                        $('#deleteFrom').submit();

                    }
                });
            });
        });
    </script>
}