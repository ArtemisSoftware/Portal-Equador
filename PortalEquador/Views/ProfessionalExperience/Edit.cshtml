@model PortalEquador.Domain.Profession.Experience.ViewModels.ProfessionalExperienceViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Experiência profissional</h1>
<h3>@Html.DisplayNameFor(model => model.Workstation):  @Html.DisplayFor(model => model.Workstation.Description)</h3>
<hr />
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PersonaInformationId" />
            <input type="hidden" asp-for="FullName" />
            <input type="hidden" asp-for="WorkstationId" />
            <input type="hidden" asp-for="CompanyId" />
            <input type="hidden" asp-for="DateCreated" />

            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Company)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Company.Description)
                </dd>
            </dl>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Years" class="control-label"></label>
                    <input asp-for="Years" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Years" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Months" class="control-label"></label>
                    <input asp-for="Months" class="form-control" type="number" min="0" max="11" />
                    <span asp-validation-for="Months" class="text-danger"></span>
                </div>
            </div>
            <br />
            @if (Model.Error != null)
            {
                <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                        <span asp-validation-for="Error"></span>
                    </div>
                </div>
                <br />
            }
            <br />
            <div>
                <a asp-action="Index" asp-route-identifier="@Model.PersonaInformationId" asp-route-fullName="@Model.FullName" class="btn btn-dark">Regressar ao index</a> &nbsp;
                <input type="submit" value="Guardar Alterações" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

