@model IEnumerable<PortalEquador.Domain.Document.ViewModels.DocumentDetailViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Documentos</h1>

<h3>@ViewBag.username</h3>
<p>
    <a  asp-controller="Document" asp-action="Create" asp-route-identifier="@ViewBag.identifier" asp-route-fullName="@ViewBag.username" class="btn btn-success"><i class="fas fa-plus"></i> Criar Novo Registo</a>
</p>
<br />


<div class="row">
    @{ int itemCount = 0; } 
    @foreach (var item in Model) 
    {
        <div class="col-sm-4">
            <div class="card">
                <img id="frame" src="@Url.Content(@item.PicturePath)" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        @Html.DisplayFor(modelItem => item.Document.Description)
                        </h5>
                    <p class="card-text">
                         @Html.DisplayFor(modelItem => item.Document.Group.Description)
                        @Html.DisplayFor(modelItem => item.Observation)
                    </p>
                    <button class="btn btn-info" onclick="window.open('@Url.Content(@item.PicturePath)', '_blank')"><i class="fas fa-eye" title="Detalhe"></i></button>
          
                    <!--
                     <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-warning"><i class="fas fa-download" title="Editar"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-eye" title="Detalhe"></i></a>
                    -->
                    <button data-id="@item.Id" data-identifier="@ViewBag.identifier" data-username="@ViewBag.username" class="btn btn-danger deleteBtn" type="button"><i class="fas fa-trash" title="Remover"></i></button>
                    <form id="deleteDocument" asp-action="DeleteDocument">
                        <input type="hidden" id="documentId" name="Id" />
                        <input type="hidden" id="identifier" name="identifier" />
                        <input type="hidden" id="username" name="username" />
                    </form>
                </div>
            </div>
        </div>
            @if (++itemCount % 3 == 0)
                {
                    @:</div>
                    @:<div class="row">
                }
           
      }

</div>
@section Scripts{
    <script>
        $(function () {

            $('.deleteBtn').click(function (e) {
                swal({
                    title: "Elimar documento",
                    text: "Tem a certeza que pretende eliminar o documento?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        var identifier = btn.data("identifier");
                        var username = btn.data("username");
                        $('#documentId').val(id);
                        $('#identifier').val(identifier);
                        $('#username').val(username);
                        $('#deleteDocument').submit();
                       
                    }
                });
            });


        });
    </script>
}