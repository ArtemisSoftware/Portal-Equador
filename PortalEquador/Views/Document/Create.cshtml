@model PortalEquador.Domain.Document.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Documento</h1>

<h4>Para: @Model.FullName</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PersonaInformationId" />

            <div class="form-group">
                <label asp-for="DocumentTypeId" class="control-label"></label>
                <select asp-for="DocumentTypeId" class="form-select" asp-items="Model.DocumentTypes"></select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Error" class="text-danger"></span>
            </div>
            <br />

            <div class="mb-3">
                <label asp-for="Observation" class="control-label"></label>
                <textarea asp-for="Observation" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="form-label"></label>
                <input asp-for="ImageFile" accept="image/*" onchange="preview()" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <br />
            <br />
            <div class="form-group">
                <a asp-action="Index" asp-route-id="@ViewBag.id"  class="btn btn-dark">Regressar ao index</a> &nbsp;
                <input type="submit" value="Criar registo" class="btn btn-primary" />
            </div>
        </form>
    </div>


    <div class="col-md-8">
        <label for="Image" class="form-label">Pré-visualização</label>
        <br />
        <img id="frame" src="" class="img-fluid" />
    </div>
</div>



@section Scripts{
    <script>
        function preview() {
            frame.src = URL.createObjectURL(event.target.files[0]);
        }
        function clearImage() {
            document.getElementById('formFile').value = null;
            frame.src = "";
        }
    </script>
}