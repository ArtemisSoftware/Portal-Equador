@model PortalEquador.Domain.MechanicalWorkshop.Vehicle.ViewModels.VehicleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar veículo</h1>
<h3>@Html.DisplayNameFor(model => model.LicencePlate):  @Html.DisplayFor(model => model.LicencePlate)</h3>

<hr />
<br />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LicencePlate" />

            <div class="mb-3">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <dd class="col-sm-10">
                <div class="form-group">
                    <label asp-for="ContractId" class="control-label"></label>
                    <select asp-for="ContractId" class="form-control form-select" asp-items="@Model.Contracts"></select>
                </div>
            </dd>

            <br />
            <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Regressar ao index</a> &nbsp;
                <input type="submit" value="Guardar Alterações" class="btn btn-warning" />
            </div>


        </form>

    </div>
</div>