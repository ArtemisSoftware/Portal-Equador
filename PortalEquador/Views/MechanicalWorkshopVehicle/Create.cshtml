@model PortalEquador.Domain.Scheduler.MechanicalWorkshop.ViewModels.vehicle.MechanicalWorkshopVehicleViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Novo Veículo</h1>

<hr />
<br />
   
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LicencePlate" class="control-label"></label>
                <dl class="row">
                    <dt class="col-sm-3">
                        <input asp-for="LicencePlatePosition0" class="form-control text-center" maxlength="2" style="text-transform:uppercase" />
                    </dt>
                    <dt class="col-sm-3">
                        <input asp-for="LicencePlatePosition1" class="form-control text-center" maxlength="2" style="text-transform:uppercase"/>
                    </dt>
                    <dt class="col-sm-3">
                        <input asp-for="LicencePlatePosition2" class="form-control text-center" maxlength="2" style="text-transform:uppercase"/>
                    </dt>
                </dl>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>


            <div class="form-group">
                <span asp-validation-for="Error" class="text-danger"></span>
            </div>

            <br />
            <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Regressar ao index</a> &nbsp;
                <input type="submit" value="Criar registo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



